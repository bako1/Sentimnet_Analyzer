<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IMT3281.PrimaryController">
   <children>
   
       <MenuBar prefHeight="35.0" prefWidth="500.0">
           <menus>
               <Menu mnemonicParsing="false" text="File">
                   <items>
                       <MenuItem fx:id="browseSingleFile" onAction="#singleFileChooser" text="Browse Single File" />
                       <MenuItem fx:id="multipleFile" mnemonicParsing="false" onAction="#multipleFileChooser" text="Browse Multiple File" />
                       <SeparatorMenuItem mnemonicParsing="false" />
                       <MenuItem fx:id="toExit" mnemonicParsing="true" onAction="#onExit" text="Exit">
                           <accelerator>
                               <KeyCodeCombination alt="ANY" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                       </MenuItem>
                   </items>
               </Menu>
               <Menu text="Help">
                   <items>
                       <MenuItem fx:id="usage" onAction="#instruction" text="Usage">
                           <accelerator>
                               <KeyCodeCombination alt="ANY" code="F1" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                   </items>
               </Menu>
               <Menu text="About">
                   <items>
                       <MenuItem text="Author" />
                       <MenuItem text="Version" />
                       <SeparatorMenuItem />
                       <MenuItem text="Contact" />
                   </items>
               </Menu>
           </menus>
       </MenuBar>
   </children>
</AnchorPane>
