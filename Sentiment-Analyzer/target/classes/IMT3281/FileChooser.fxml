<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" prefHeight="568.0" prefWidth="1009.0" xmlns="http://javafx.com/javafx/8.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IMT3281.Analyzer">

      <MenuBar prefHeight="25.0" prefWidth="1000.0">

          <Menu mnemonicParsing="false" text="File">

              <!--<MenuItem onAction="#fileChooser" text="Brows Single File">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>-->
                  <MenuItem onAction="#browseFiles" text="Browse Files">
                     <accelerator>
                        <KeyCodeCombination alt="ANY" code="U" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem onAction="#onexit" text="Exit" />

          </Menu>
          <Menu mnemonicParsing="false" text="Go Back">
              <MenuItem fx:id="goBackToHomePage" mnemonicParsing="false" onAction="#goBackToHomePage" text="Back to Main page">
                         <accelerator>
                             <KeyCodeCombination alt="ANY" code="HOME" control="UP" meta="UP" shift="UP" shortcut="UP" />
                         </accelerator></MenuItem>

          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="usage" mnemonicParsing="false" onAction="#usage" text="Usage" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="About">
               <items>
                  <MenuItem mnemonicParsing="false" text="Author" />
                  <MenuItem mnemonicParsing="false" text="Contacts" />
                  <MenuItem mnemonicParsing="false" text="Version" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Export">
               <items>
                  <MenuItem fx:id="exportToXML" text="Export to XML">
                     <accelerator>
                        <KeyCodeCombination alt="ANY" code="U" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exportToCSV" text="Export to CSV" />
               </items>
            </Menu>

      </MenuBar>
   <GridPane layoutX="5.0" layoutY="27.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
      
            <TableView fx:id="tableView" prefHeight="363.0" prefWidth="1000.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
              <columns>
                    <TableColumn fx:id="target" prefWidth="75.0" text="Target" />
                    <TableColumn fx:id="subject" prefWidth="75.0" text="Subject" />
                    <TableColumn fx:id="polarity" prefWidth="75.0" text="Polarity" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
      </children>
   </GridPane>
   <HBox layoutX="6.0" layoutY="399.0" prefHeight="139.0" prefWidth="1000.0">
      <children>
         <TextArea fx:id="textArea" prefHeight="139.0" prefWidth="999.0" />
      </children>
   </HBox>
</AnchorPane>
